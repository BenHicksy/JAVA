    private void jButton4ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        // Enter Data button:
        String  cName   =   "";
        String  cAddress=   "";
        String  tSlogan =   "";
        String  tQuantity=  "";
        String  sPrice  =   "";
        String pWashed  =   "no";
        String  tSize   =   "";
        
        Statement stat = null;
        ResultSet rsTshirtdatabase = null;
        
        int tQty = 0;
        double shirtPrice = 0.0;
        double tCost= 0.0;
        
        //Get data from the fields first, then transfer into int's and dbls. Also code validation
        cName       = (String)cNamefield.getText();
        if (cName.isEmpty())
        {
            JOptionPane.showMessageDialog(null, "Please enter your name");
        }
        cAddress    = (String)cAddressfield.getText();
                if (cAddress.isEmpty())
        {
            JOptionPane.showMessageDialog(null, "Please enter your address");
        }
        tSlogan     = (String)tSloganfield.getText();
                if (tSlogan.isEmpty())
        {
            JOptionPane.showMessageDialog(null, "Please enter your shirt slogan");
        }
        tQuantity   = (String)tQuantityfield.getText();
                if (tQuantity.isEmpty())
        {
            JOptionPane.showMessageDialog(null, "Please enter your desired amount of t-shirts");
        }
        sPrice      = (String)tShirtfield.getText();
                if (sPrice.isEmpty())
        {
            JOptionPane.showMessageDialog(null, "Please enter the price for the t-shirts");
        }
                
        //here are the radio buttons for the size
        if (jSmall.isSelected()){
            tSize = "small";
        } else if (jMedium.isSelected()) {
            tSize="Medium";
        } else if (jLarge.isSelected()) {
            tSize="Large";
        } else if(jExtrasmall.isSelected()){
            tSize="Extra Small";
        } else if(jExtralarge.isSelected()){
            tSize="Extra Large";
        } else
        {
            JOptionPane.showMessageDialog(null, "Please select a T-shirt size");
        }

        //recieve the checkbox info
        if (jCheckBox1.isSelected())
        {
            pWashed="yes";
        }
        else 
        {
            pWashed="no";
        }    
//converting data
        tQty = Integer.parseInt(tQuantity);
        shirtPrice = Double.parseDouble(sPrice);
        
        Tshirtclass orderObject1 = new Tshirtclass (cName, cAddress, tSlogan, tQty, shirtPrice, 
            pWashed, tSize);
        
        orderObject1.calcCost();
        
        //inserting data into databse
        String sql = "insert into tshirts (clientname, Address, slogan, quantity, tshirtprice, prewashed, size, total)"
                + " values ( ' " + orderObject1.getcName() + "' , '" + orderObject1.getcAddress()  + 
                            "' , '" + orderObject1.gettSlogan() + "', " + orderObject1.gettQty() +
                            " , " + orderObject1.getShirtPrice() +" , '"+pWashed + "' , '" + orderObject1.gettSize() + 
                            "' , " + orderObject1.gettCost() + ")";
       
        JOptionPane.showMessageDialog(this, sql);
        
                try {
            stat = conn.createStatement (ResultSet.TYPE_SCROLL_SENSITIVE,
                    ResultSet.CONCUR_UPDATABLE);
                int rows = stat.executeUpdate(sql);
        } catch (SQLException e) {
            JOptionPane.showMessageDialog(null, "Insertion error: " + e);
        }
                jInternalFrame2.moveToBack();
                jInternalFrame3.moveToFront();
    }                                        

    private void jButton2ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        // Displaying all orders into area to see
        //clientname, Address, slogan, quantity, tshirtprice, prewashed, size, total 
        Statement stat = null;
        ResultSet rsTshirtdatabase = null;
        
        try {
            stat = conn.createStatement (ResultSet.TYPE_SCROLL_INSENSITIVE,
                    ResultSet.CONCUR_UPDATABLE);
            rsTshirtdatabase = stat.executeQuery("select * from tshirts");
            while (rsTshirtdatabase.next()) {
                String orderID = rsTshirtdatabase.getString("orderID");
                String cName = rsTshirtdatabase.getString("clientname");
                String cAddress = rsTshirtdatabase.getString("Address");
                String tSlogan = rsTshirtdatabase.getString("slogan");
                String tSize = rsTshirtdatabase.getString("Size");
                
                int tQty = rsTshirtdatabase.getInt("quantity");
                double shirtprice = rsTshirtdatabase.getDouble("tshirtprice");
                double tCost = rsTshirtdatabase.getDouble("total");
                boolean pWashed = rsTshirtdatabase.getBoolean("prewashed");
                
                
                jTextArea1.append(orderID + " Name: " + cName + " " + " Address: " + cAddress + " Slogan: " 
                        + tSlogan + " Quantity: " + tQty + " Cost per shirt: $" + shirtprice + 
                        " prewashed?: " + pWashed + " Size: " + tSize + " total cost: $" + tCost + '\n');
        }
        }
        catch (SQLException e) 
        {
               JOptionPane.showMessageDialog(null, "Display error: " + e);
        }
        
    }                                        

    private void jButton3ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        // EXPORT DATA TO WORD
        String sql="Select * FROM tshirts WHERE size='" + (String)jComboBox1.getSelectedItem()+"'";
        try {
            Connection conn = DriverManager.getConnection("jdbc:mysql://localhost/TshirtDatabase","root","");
            Statement stat = conn.createStatement();
            
            ResultSet rsTshirtdatabase = stat.executeQuery(sql);
            
            PrintWriter pw = new PrintWriter(new FileWriter((String)jComboBox1.getSelectedItem() + ".txt"));
        
        while(rsTshirtdatabase.next()){
                String cName = rsTshirtdatabase.getString("clientName");
                String cAddress = rsTshirtdatabase.getString("Address");
                String tSlogan = rsTshirtdatabase.getString("slogan");
                String tSize = rsTshirtdatabase.getString("Size");
                int tQty = rsTshirtdatabase.getInt("quantity");
                double shirtprice = rsTshirtdatabase.getDouble("tshirtprice");
                boolean pWashed = rsTshirtdatabase.getBoolean("prewashed");
                double tCost = rsTshirtdatabase.getDouble("total");
                pw.println("client name: " + cName);
                pw.println("Address: " + cAddress);
                pw.println("slogan: " + tSlogan);
                pw.println("size: " + tSize);
                pw.println("quantity: " + tQty);
                pw.println("t shirt price: " + shirtprice);
                pw.println("prewashed:" + pWashed);
                pw.println("total price: " + tCost);
                pw.println();
        }
        pw.close();
        JOptionPane.showMessageDialog(null, "Tshirts written to file");
        
        } catch (SQLException ex){
            JOptionPane.showMessageDialog(null, ex.getMessage());
        } catch (IOException ex){
            JOptionPane.showMessageDialog(null, ex.getMessage());
        }
    }                                        

    private void jButton5ActionPerformed(java.awt.event.ActionEvent evt) {                                         
               // DELETE button code:
        Statement stat = null;
        ResultSet rsCustomer = null;
        String cid = "";
        
        //find the id to delete
        cid = JOptionPane.showInputDialog("Enter the customer ID to delete");
        
        try {
            stat = conn.createStatement(ResultSet.TYPE_SCROLL_INSENSITIVE,
                    ResultSet.CONCUR_UPDATABLE);
            rsCustomer = stat.executeQuery("Select * from tshirts where orderID=" + cid);
            if(rsCustomer.next()) {
                rsCustomer.deleteRow();
            }
        } catch (SQLException e) {
            JOptionPane.showMessageDialog(null, "Delete error: " + e);
        }
        jTextArea1.setText("");
    }                                        

    private void jButton6ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        // Code for MODIFY button
        Statement stat = null;
        ResultSet rsCustomer = null;
        String sid = "";
        
        //find the id to modify
        sid = JOptionPane.showInputDialog("Please enter the customer ID to modify");
        
        try {
            stat = conn.createStatement(ResultSet.TYPE_SCROLL_INSENSITIVE,
                    ResultSet.CONCUR_UPDATABLE);
            rsCustomer = stat.executeQuery("select * from tshirts where orderID=" + sid);
            while (rsCustomer.next()) {
            mNamefield.setText(rsCustomer.getString("clientName"));
            mAddressfield.setText(rsCustomer.getString("Address"));
            mSloganfield.setText(rsCustomer.getString("slogan"));
            
            }
        } catch (SQLException e) {
            JOptionPane.showMessageDialog(null, "Delete error: " + e);
        }
    }                                        

