                    JOptionPane.showMessageDialog(null, "Driver error:" + e);
                }
        //Establish connection. Note the variable conn is declased as class level.
        try
        {
            conn = DriverManager.getConnection("jdbc:mysql://localhost/TshirtDatabase","root","");
        }
        catch (SQLException e)
        {
            JOptionPane.showMessageDialog(null, "Connection error:" + e);
        }
        jInternalFrame1.moveToFront();
    }

